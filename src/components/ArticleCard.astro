---
interface Props {
  href: string;
  title: string;
  date: Date;
  description?: string;
  tags?: string[];
  image?: string;
  lang?: "en" | "ua";
  tagBase?: string;
}

const { href, title, date, description, tags = [], image, lang = "en", tagBase = "/tags" } = Astro.props;
---

<a href={href} class="group flex gap-6 items-start">
  <div class="shrink-0 w-48 aspect-video rounded-lg overflow-hidden bg-gray-100">
    {image ? (
      <img
        src={image}
        alt={title}
        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        loading="lazy"
      />
    ) : (
      <div class="w-full h-full bg-gray-200" />
    )}
  </div>

  <div class="flex-1 min-w-0">
    <time class="text-xs text-gray-400" datetime={date.toISOString()}>
      {date.toLocaleDateString(lang === "ua" ? "uk-UA" : "en-US", {
        year: "numeric",
        month: "short",
        day: "numeric",
      })}
    </time>
    <h2 class="text-lg font-semibold leading-snug group-hover:text-accent transition-colors mt-1 mb-2">
      {title}
    </h2>
    {tags.length > 0 && (
      <div class="flex flex-wrap gap-1.5">
        {tags.map((tag) => (
          <span class="text-xs text-gray-400 bg-gray-100 px-2 py-0.5 rounded">{tag}</span>
        ))}
      </div>
    )}
  </div>
</a>
