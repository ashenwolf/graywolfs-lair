---
interface Props {
  href: string;
  title: string;
  date: Date;
  description?: string;
  tags?: string[];
}

const { href, title, date, description, tags = [] } = Astro.props;
---

<a href={href} class="group block">
  <h2 class="text-xl font-semibold group-hover:underline">{title}</h2>
  <time class="text-sm text-gray-500" datetime={date.toISOString()}>
    {date.toLocaleDateString("en-US", { year: "numeric", month: "long", day: "numeric" })}
  </time>
  {tags.length > 0 && (
    <div class="mt-1 flex gap-2">
      {tags.map((tag) => (
        <span class="text-xs bg-gray-100 px-2 py-0.5 rounded">{tag}</span>
      ))}
    </div>
  )}
  {description && <p class="text-gray-600 mt-1">{description}</p>}
</a>
