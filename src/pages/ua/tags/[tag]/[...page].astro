---
import type { GetStaticPathsOptions } from "astro";
import Base from "../../../../layouts/Base.astro";
import ArticleList from "../../../../components/ArticleList.astro";
import Pagination from "../../../../components/Pagination.astro";
import { makeTagPaths } from "../../../../utils/collections";

export async function getStaticPaths(opts: GetStaticPathsOptions) {
  return makeTagPaths("ua", opts);
}

const { page } = Astro.props;
const { tag } = Astro.params;
---

<Base title={`Тег: ${tag}`} lang="ua">
  <div class="container-inner">
    <h1 class="text-3xl font-bold mb-8">Тег: {tag}</h1>
    <ArticleList articles={page.data} emptyMessage="Статей з цим тегом немає." lang="ua" />
    <Pagination page={page} />
  </div>
</Base>
