---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
  lang?: "en" | "ua";
}

const { title, lang = "en" } = Astro.props;
---

<html lang={lang === "ua" ? "uk" : "en"}>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,400;0,500;0,700;0,900;1,400;1,700&display=swap"
      rel="stylesheet"
    />
    <title>{title} â€” Sergii Gulenok</title>
  </head>
  <body class="bg-white text-gray-900 min-h-screen flex flex-col font-sans">
    <Header lang={lang} />
    <main class="flex-1" id="top">
      <slot />
    </main>
    <Footer lang={lang} />
  </body>
</html>
